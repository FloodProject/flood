       author      = "Lluis Sanchez"
       copyright   = "GPL"
       description = "HelloWorldExtension"
	   category    = "SimpleApp/Extensions"
       version     = "0.1.0">

	<Runtime>
		<Import assembly="HelloWorldExtension.dll"/>
	</Runtime>
	
	<Dependencies>
		<Addin id="Core" version="0.1.0" />
	</Dependencies>

	<!-- Extensions -->
	
	<Extension path = "/SimpleApp/Writers">
		<Type id="HelloWorldExtension.HelloWorldWriter"/>
	</Extension>

</Addin>
